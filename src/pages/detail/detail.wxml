<!--pages/detail/detail.wxml-->
<view class="detail-wrapper">
  <view class="detail-header">
    <view class="detail-title">
    {{details.title}}
    </view>
    <view class="detail-subtitle">
      <view>
        {{details.source}} {{date}}
      </view>
      <view>
        阅读 {{details.readCount}}
      </view>
    </view>
    
  </view>

  <rich-text 
  nodes="{{nodes}}"
  class="detail-content">
  </rich-text>
</view>
